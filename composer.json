{
    "name": "jaroslawzielinski/project-dockerized",
    "description": "PHP Composer procject dockerized with mysql",
    "type": "custom-plugin",
    "license": "MIT",
    "version": "master",
    "authors": [
        {
            "name": "Jarosław Zieliński",
            "email": "jarek.zielinski82@gmail.com"
        }
    ],
    "minimum-stability": "dev",
    "scripts": {
      "dockerize-myproject": [
        "mkdir -p dockers",
        "mkdir -p run",
        "cp -r vendor/jaroslawzielinski/project-dockerized/dockers .",
        "cp -r vendor/jaroslawzielinski/project-dockerized/run .",
        "chmod +x run/dockerized",
        "cp vendor/jaroslawzielinski/project-dockerized/.env .",
        "cp vendor/jaroslawzielinski/project-dockerized/docker-compose.yml ."
      ],
      "post-install-cmd": [
        "@dockerize-myproject"
      ],
      "post-update-cmd": [
        "@dockerize-myproject"
      ],
      "post-package-install": [
        "@dockerize-myproject"
      ]
   }
}
